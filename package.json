{
  "name": "x402-payment-middleware",
  "version": "0.1.0",
  "description": "x402 Payment Middleware - モジュラー・レイヤードアーキテクチャによる決済ミドルウェア",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean",
    "type-check": "pnpm -r type-check",
    "api:dev": "pnpm --filter @x402/api dev",
    "web:dev": "pnpm --filter @x402/web dev",
    "mw:build": "pnpm --filter @x402/middleware build",
    "setup": "pnpm install && pnpm build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "keywords": [
    "x402",
    "payment",
    "middleware",
    "blockchain",
    "crypto",
    "eip3009"
  ],
  "author": "x402 Team",
  "license": "MIT",
  "packageManager": "pnpm@8.15.0"
} 